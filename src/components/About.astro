---
// Minimal data sets (reduced & concise)
// Paired value + stat rows for inline alignment
const valueStats = [
  {
    icon: 'fa-gauge-high',
    title: 'ESX-Only Focus',
    body: 'Always ESX Legacy. Every decision. Every line.'
  },
  {
    icon: 'fa-shield-halved',
    title: 'Overextended Native',
    body: 'Built natively. No shims. No hacks. Just vibes.'
  },
  {
    icon: 'fa-brands fa-css3',
    title: 'UI Discipline',
    body: 'No clutter. Fast to scan. Immediate to act.'
  }
];
---
<section id="about" class="about minimal">
  <div class="container">
    <header class="about-head anim-fade-up">
      <h2 class="about-title">About CodeGremlins</h2>
  <p class="about-tag">Focused ESX Legacy engineering.</p>
    </header>

    <div class="about-summary-card anim-fade-up">
      <p class="about-summary">We build productionâ€‘ready ESX Legacy resources with native Overextended (ox_lib, ox_inventory, ox_target) integration</p>
    </div>

    <div class="value-stat-grid anim-fade-up">
      {valueStats.map((row, i) => (
        <div class="value-row" style={`animation-delay:${i * 60}ms`}>
          <div class="value-item"><i class={`fas ${row.icon}`}></i><div class="value-copy"><strong class="value-title">{row.title}</strong><span class="value-body">{row.body}</span></div></div>
        </div>
      ))}
    </div>

  </div>
</section>
