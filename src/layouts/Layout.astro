---
// Default metadata (can be overridden per page via <Layout title="..." description="...">)
const { 
  title = 'CodeGremlins', 
  description = 'We mostly work on developing ESX scripts, and itâ€™s what we enjoy the most.' 
} = Astro.props;
// Import global stylesheet so Astro/Vite bundles & optimizes it (instead of linking to /src path)
import '../styles/global.css';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Fira+Code:wght@400;500;600&display=swap" rel="stylesheet" />
  <!-- Font Awesome (CSS only). Integrity hash corrected; matches cdnjs published asset. -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  {/** global.css is imported above so the bundler will emit a versioned CSS asset */}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <div id="scroll-progress" role="progressbar" aria-label="Scroll progress" aria-valuemin="0" aria-valuemax="100" aria-valuenow="0"></div>
    <slot />
    <script src="/scripts/animations.js" defer></script>
  </body>
</html>
